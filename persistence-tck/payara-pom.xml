                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <!-- start domain -->
                        <executions>
                            <execution>
                                <id>start-managed-payara-server-for-test-setup</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target unless="skip.setup">
                                        <exec executable="${exec.asadmin}">
                                            <arg value="start-domain" />
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>

                            <!-- start database -->
                            <execution>
                                <id>start-database</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <exec executable="${project.build.directory}${file.separator}payara7${file.separator}javadb${file.separator}bin${file.separator}startNetworkServer" spawn="true"/>
                                        <echo message="Waiting 3 seconds for database in forked process to start..."/>
                                        <sleep seconds="3"/>
                                    </target>
                                </configuration>
                            </execution>

                            <execution>
                                <id>create-jdbc-connection-pool</id>
                                <phase>generate-resources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <exec executable="${exec.asadmin}">
                                            <arg value="create-jdbc-connection-pool" />
                                            <arg value="--datasourceClassname=org.apache.derby.jdbc.ClientDataSource" />
                                            <arg value="--resType=javax.sql.DataSource" />
                                            <arg value="--property=databaseName=derbyDB:serverName=localhost:portNumber=1527:User=cts1:Password=cts1" />
                                            <arg value="DerbyPool"/>
                                        </exec>
                                    </target>
                                </configuration>
                            </execution>

